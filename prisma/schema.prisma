generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "sqlite"
  // provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Catalogo {
  id        Int       @id @default(autoincrement())
  title     String
  descricao String
  icone     String
  servicos  Servico[]
}

model Servico {
  id        Int    @id @default(autoincrement())
  title     String
  descricao String

  catalogoId Int?
  Catalogo   Catalogo? @relation(fields: [catalogoId], references: [id])
}

model Ticket {
  id     Int    @id @default(autoincrement())
  ticket String @unique @default(uuid())

  titulo     String
  tipo       String
  prioridade String
  atendente  String
  fila       String
  detalhe    String
  data       String

  userId Int
}
