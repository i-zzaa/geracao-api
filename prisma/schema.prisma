generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "sqlite"
  // provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Catalog {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  icon        String
  services    Service[]
}

model Service {
  id          Int    @id @default(autoincrement())
  title       String
  description String

  catalogId Int?
  Catalog   Catalog? @relation(fields: [catalogId], references: [id])
}

model Ticket {
  id     Int    @id @default(autoincrement())
  ticket String @unique @default(uuid())

  title    String
  type     String
  status   String
  priority String
  date     String

  userId Int
  detail Detail[]
}

model Detail {
  id       Int @id @default(autoincrement())
  ticketId Int

  title     String
  attendant String
  queue     String
  detalhe   String
  date      String

  ticket Ticket @relation(fields: [ticketId], references: [id])
}
